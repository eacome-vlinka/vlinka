---
interface Props {
	text: string,
    link: string,
    openInNewTab?: boolean,
    class?: string,
    variant?: 'primary' | 'outline' | 'dark' | 'light',
    size?: 'default' | 'xl' | 'tag',
}

const {
    text,
    link,
    openInNewTab,
    class: className,
    variant = 'primary',
    size = 'default'
} = Astro.props;

const targetAttr = openInNewTab ? '_blank' : undefined;
const relAttr = openInNewTab ? 'noopener noreferrer' : undefined;

const sizeClass = size === 'xl' ? 'xl' : size === 'tag' ? 'tag' : '';
const variantClass = variant === 'outline' ? 'outline' : variant === 'dark' ? 'dark' : variant === 'light' ? 'light' : 'primary';
---

<div class={className || `btn ${variantClass} btn-hover ${sizeClass}`}>
    <a
        href={link}
        class="btn-click"
        target={targetAttr}
        rel={relAttr}
    >
        <div class="btn-content duplicate">
            <div class="btn-fill"></div>
            <span>{text}</span>
        </div>

        <div class="border-box"></div>
    </a>
</div>
