---
interface Props {
  id: string;
  title: string;
  description: string;
  image?: string;
  link: string;
}

const { id, title, description, image, link } = Astro.props;
---

<a href={link} class="solution-card">
  <div class="card-image">
    {image ? (
      <img src={image} alt={title} loading="lazy" />
    ) : (
      <div class="card-placeholder">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <line x1="10" y1="9" x2="8" y2="9"></line>
        </svg>
      </div>
    )}
  </div>
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>
    <span class="card-link">
      了解更多
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="5" y1="12" x2="19" y2="12"></line>
        <polyline points="12 5 19 12 12 19"></polyline>
      </svg>
    </span>
  </div>
</a>

<style>
  .solution-card {
    display: flex;
    flex-direction: column;
    background-color: var(--color-white);
    border-radius: calc(var(--border-radius) * 1.5);
    overflow: hidden;
    transition: transform var(--animation-smooth), box-shadow var(--animation-smooth);
    border: 1px solid var(--color-border);
    text-decoration: none;
  }

  .solution-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(var(--color-dark-rgb), 0.12);
  }

  .card-image {
    position: relative;
    width: 100%;
    padding-top: 56.25%;
    background: linear-gradient(135deg, var(--color-dark) 0%, var(--color-dark-tint) 100%);
    overflow: hidden;
  }

  .card-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--animation-smooth);
  }

  .solution-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-placeholder svg {
    width: 3em;
    height: 3em;
    stroke: rgba(var(--color-white-rgb), 0.3);
  }

  .card-content {
    padding: 1.5em;
    display: flex;
    flex-direction: column;
    gap: 0.75em;
  }

  .card-title {
    font-family: 'Manrope', sans-serif;
    font-size: 1.2em;
    font-weight: 600;
    color: var(--color-dark);
    line-height: 1.3;
  }

  .card-description {
    font-size: 0.9em;
    color: var(--color-text);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5em;
    font-size: 0.9em;
    font-weight: 500;
    color: var(--color-primary);
    margin-top: 0.5em;
    transition: gap var(--animation-primary);
  }

  .solution-card:hover .card-link {
    gap: 0.75em;
  }

  .card-link svg {
    width: 1em;
    height: 1em;
    stroke: var(--color-primary);
  }
</style>
