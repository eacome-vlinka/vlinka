---
interface Props {
  id: string;
  name: string;
  fullName: string;
  category: string;
  categoryName: string;
  shortDescription: string;
  image: string;
  link: string;
}

const { id, name, fullName, category, categoryName, shortDescription, image, link } = Astro.props;
---

<a href={link} class="product-card" data-category={category}>
  <div class="card-image">
    <img src={image} alt={fullName} loading="lazy" />
  </div>
  <div class="card-content">
    <span class="card-category">{categoryName}</span>
    <h3 class="card-title">{name}</h3>
    <p class="card-description">{shortDescription}</p>
  </div>
</a>

<style>
  .product-card {
    display: flex;
    flex-direction: column;
    background-color: var(--color-white);
    border-radius: calc(var(--border-radius) * 1.5);
    overflow: hidden;
    transition: transform var(--animation-smooth), box-shadow var(--animation-smooth);
    border: 1px solid var(--color-border);
    text-decoration: none;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(var(--color-dark-rgb), 0.12);
  }

  .card-image {
    position: relative;
    width: 100%;
    padding-top: 75%;
    background-color: var(--color-light);
    overflow: hidden;
  }

  .card-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--animation-smooth);
  }

  .product-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1.25em;
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }

  .card-category {
    font-size: 0.7em;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-title {
    font-family: 'Manrope', sans-serif;
    font-size: 1.1em;
    font-weight: 600;
    color: var(--color-dark);
    line-height: 1.3;
  }

  .card-description {
    font-size: 0.85em;
    color: var(--color-text);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
